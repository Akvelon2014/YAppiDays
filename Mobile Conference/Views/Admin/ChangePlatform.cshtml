@using MobileConference.Enums
@using MobileConference.Helper
@model MobileConference.Models.PlatformModel

@{
    ViewBag.Title = "Изменение параметров технологии";
}
<div class="fullBlock">
    <div class="container_12 titleFloat">
        <div class="grid_6  titleName">
            <span>Параметры технологии</span>
        </div>
        <div class="grid_5">
            @Html.ActionLink("вернуться","ManagePlatform","Admin", null,new{@class="right"})
        </div>
    </div>
</div>

<div class="ajaxHere">
    @Html.Action("ChangePlatformAvatar", new{platformId = Model.Id})
</div>

    @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    @Html.Hidden("Id", Model.Id)
    @Html.FloatTitle("Общие сведения",true, true)
    <div class="container_12 topContainer">
        <div class="grid_9 omega">
            <table>
                <tr>
                    <td class="requiredField">@Html.LabelFor(m => m.Title)</td>
                    <td>@Html.TextBoxFor(m => m.Title)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Description)</td>
                    <td>@Html.TextAreaFor(m => m.Description, new {rows = "6", cols = "40"})</td>
                </tr>
            </table>
            <input type="submit" value="Сохранить" class="grey customButton mediumSizeButton    "/>
        </div>
    </div>
}
<div class="empty_100"></div>