@using MobileConference.Enums
@using MobileConference.Helper
@model MobileConference.Models.AwardModel

<script> ClearImageArea();</script>
<div class="container_12">
    <div class="grid_9 alpha">
        <div class="topContainer center">
            @using (Html.BeginForm("ChangeAwardAvatar", "Admin", FormMethod.Post, new {@class = "withAjax"}))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="awardId" value ="@Model.Id"/>
                 @Html.LoaderBlock("picture",Html.UrlForPicture(Model.PictureModel), StandardRatioType.AwardRatio,
                   Url.Action("ChangeAwardAvatar",new {awardId = Model.Id}))
                 }
        </div>
    </div>
    <div class="grid_3 omega">
        @Html.PreviewBlock("picture",StandardRatioType.AwardRatio, ImagePreviewFeatures.All)        
    </div>
</div>