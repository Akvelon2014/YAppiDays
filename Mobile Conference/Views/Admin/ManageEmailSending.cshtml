@using MobileConference.Enums
@using MobileConference.Helper
@model MobileConference.Models.EmailSending
@{
    ViewBag.Title = "Email Рассылка";
}

@Html.FloatTitle("Рассылка")
<div class="container_12 topContainer">
    @using (Html.BeginForm("ManageEmailSending", "Admin", FormMethod.Post))
    {
        <div class="grid_12 alpha omega">
            <div class="grid_9 alpha">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
               
                <table>
                    <tr>
                        <td class="requiredField">@Html.LabelFor(m => m.Title)</td>
                        <td>@Html.TextBoxFor(m => m.Title)</td>
                    </tr>
                    <tr>
                        <td class="requiredField">@Html.LabelFor(m => m.Message)</td>
                        <td>
                            @Html.TextAreaFor(m => m.Message, new {style="width:600px;height:250px;max-width:600px;max-height:250px;"})
                        </td>
                    </tr>
                </table>
            </div>
            <div class="grid_3 omega">
                <p>Получатели:</p>
                @Html.CheckBoxFor(m=>m.IncludeAdmin)
                @Html.LabelFor(m=>m.IncludeAdmin)
                <br/>   
                @Html.CheckBoxFor(m=>m.IncludeExpert)
                @Html.LabelFor(m=>m.IncludeExpert)
                <br/>  
                @Html.CheckBoxFor(m=>m.IncludeMentor)
                @Html.LabelFor(m=>m.IncludeMentor)
                <br/>  
                @Html.CheckBoxFor(m=>m.IncludeStudent)
                @Html.LabelFor(m=>m.IncludeStudent)
                <br/>
                @Html.CheckBoxFor(m=>m.IncludeSponsor)
                @Html.LabelFor(m=>m.IncludeSponsor)
                <br/>
                @Html.CheckBoxFor(m=>m.IncludeInfoPartner)
                @Html.LabelFor(m=>m.IncludeInfoPartner)
                <br/> 
            </div>
        </div>
        <div class="grid_12 alpha omega">
            <input type="submit" value="Отправить" class="customButton orange mediumSizeButton"/>                  
        </div>
        
    }
</div>
<div class="empty_100"></div>