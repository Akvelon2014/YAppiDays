@using MobileConference.Helper
@model MobileConference.Models.OptionModel

@{
    ViewBag.Title = "Настройки";
}
@Html.FloatTitle("Настройки")
<div class="container_12 topContainer">
    <div class="grid_8">
        @using (Html.BeginForm("ManageOption", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.CurrentEventId)</td>
                    <td>@Html.RecentEventsList(Model.CurrentEventId,"CurrentEventId",new {@class="grey"})</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.ItemPerPage)</td>
                    <td>@Html.TextBoxFor(m=>m.ItemPerPage)</td>
                </tr>
                <tr>
                    <td>
                        @Html.CheckBoxFor(m=>m.ForbiddenProjectRegistration)
                        @Html.LabelFor(m=>m.ForbiddenProjectRegistration)
                    </td>
                    <td></td>
                </tr>
            </table>
            <br/>
            <input type="submit" value="Сохранить" class="customButton orange mediumSizeButton"/>
        }
    </div>
</div>
