@using MobileConference.Models
@using MobileConference.Models
@model PagedList.IPagedList<Idea>
@{
    ViewBag.Title = "Мои проекты";
}
@Html.Partial("TipsForNewIdea")    
<div class="titleFloat fullBlock">
    <div class="container_12">
        <div class="grid_4 titleName">
            <span id="selectIdea">Выбрать проект</span>
        </div>
        <div class="grid_8 omega">
            @using (@Html.BeginForm("AllProject", "Widget", FormMethod.Post, new { @class = "externalUpdate", id = "projectSearch" }))
            {
                <span id="searchIdea">Поиск </span>
                @Html.TextBox("search", "", new {@class = "submitWithDelay"})
            }
        </div>
    </div>
</div>

<div id="projects" class="container_12 paginationWrapper projectSearch">
    @Html.Action("AllProject", "Widget", new { search = (string)ViewBag.search })
</div>