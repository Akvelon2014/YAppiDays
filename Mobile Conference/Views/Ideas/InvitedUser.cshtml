@{
    ViewBag.Title = "Приглашенные пользователи";
}
<div class="titleFloat fullBlock">
    <div class="container_12">
        <div class="grid_4 titleName">
            <span>Пригласить пользователей</span>
        </div>
        <div class="grid_6 omega">
            @using (@Html.BeginForm("UsersForInviting", "Widget", FormMethod.Get, new { @class = "externalUpdate", id = "invitedUsers" }))
            {
                <span>Поиск </span>
                @Html.TextBox("search", "", new {@class = "submitWithDelay"})
                @Html.Hidden("ideaId", (int) ViewBag.ideaId)
            }
        </div>
        <div class="grid_2 omega">
            @Html.ActionLink("вернуться","MainPage","Ideas",new {ideaId=(int)ViewBag.ideaId},null)              
        </div>
    </div>
</div>

<div id="usersblock" class="container_12 paginationWrapper brickBlocks invitedUsers">
    @Html.Action("UsersForInviting","Widget",new
    {
        search = (string)ViewBag.search, page = (int)ViewBag.page, ideaId = (int)ViewBag.ideaId
    })
</div>
<div class="empty_100"></div>