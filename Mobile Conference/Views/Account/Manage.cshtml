@using Castle.Core.Internal
@using MobileConference.Helper
@model MobileConference.Models.LocalPasswordModel
@{
    ViewBag.Title = "Управление учетными записями";
}

@Html.FloatTitle((string)ViewBag.Title)
<div class="container_12">
    <div class="push_1">
        @if (!((string) ViewBag.StatusMessage).IsNullOrEmpty())
        {
            <p>@ViewBag.StatusMessage</p>
        }
        <p>Вы вошли как <strong>@User.Identity.Name</strong>.</p>
    </div>

    @if (ViewBag.HasLocalPassword)
    {
        @Html.Partial("_ChangePasswordPartial")
    }
    else
    { 
        @Html.Partial("_SetPasswordPartial")
    }
    @Html.Action("RemoveExternalLogins")

    @Html.FloatTitle("Добавить внешнюю учетную запись", true)
    <div class="container_12">
        <div class="push_1">
            @Html.Action("ExternalLoginsList", new {ViewBag.ReturnUrl })
        </div>
    </div>
</div>
<div class="empty_100"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
