@using MobileConference.Helper
@model MobileConference.Models.LoginModel

@{
    ViewBag.Title = "Вход";
}
@Html.FloatTitle("Вход")
<div class="container_12 topContainer">
    <div class="grid_4">
        <hgroup class="title">
            @if (ViewBag.ReturnUrl != null)
            {
                <h3>Для того, чтобы посмотреть больше, пожалуйста, авторизируйтесь</h3>                
            }
        </hgroup>

        @using (Html.BeginForm(new {ViewBag.ReturnUrl}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.Login)</td>
                    <td>@Html.TextBoxFor(m => m.Login)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Password)</td>
                    <td>@Html.PasswordFor(m => m.Password)</td>
                </tr>         
            </table>
            <div class="buttonSet">
                <div class="grid_4 alpha">
                    @Html.ActionLink("Забыли пароль?", "Restore", "Account", null, new {@class = "right"})                    
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new {@class = "checkbox"}) 
                </div>
                <br/>               
                <br/>               
                <div class="grid_4">
                    <input type="submit" value="Войти" class="customButton orange mediumSizeButton right"/>        
                </div> 
            </div>
        }
    </div>
    <div class="grid_12">
        @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
    </div>
</div>
<div class="empty_100"></div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
