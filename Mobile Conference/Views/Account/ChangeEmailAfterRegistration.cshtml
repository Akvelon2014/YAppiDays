@using MobileConference.Helper
@model MobileConference.Models.EmailChanging
@{
    ViewBag.Title = "Изменить почту после регистрации";
}
@Html.FloatTitle("Изменение почты после регистрации")
<div class="container_12">
    <p>
        Если вы неверно указали вашу почту при регистрации, здесь вы можете ее изменить
        <br/>
        В случае если ваша почта уже подтверждена, вы просто войдете на сайт
    </p>
    @using (Html.BeginForm("ChangeEmailAfterRegistration", "Account", FormMethod.Post))
    {
        <div class="grid_12 alpha omega">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.Login)</td>
                    <td>@Html.TextBoxFor(m => m.Login)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.Password)</td>
                    <td>@Html.PasswordFor(m => m.Password)</td>
                </tr> 
                <tr>
                    <td>@Html.LabelFor(m => m.Email)</td>
                    <td>@Html.TextBoxFor(m => m.Email)</td>
                </tr>         
            </table>
            <input type="submit" value="Изменить" class="customButton orange mediumSizeButton"/>                  
        </div>
    }
</div>
<div class="empty_100"></div>

