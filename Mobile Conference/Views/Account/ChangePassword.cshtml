@using MobileConference.Models
@model LocalPasswordModel

@{
    ViewBag.Title = "Смена пароля";
}
<div class="container_12">
    <div class="grid_8 push_2">
        <hgroup class="title">
            <h1>@ViewBag.Title.</h1>
            <h3>Введите логин и пароль.</h3>
        </hgroup>

        @using (Html.BeginForm(new {ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <table>
                <tr>
                    <td>@Html.LabelFor(m => m.OldPassword)</td>
                    <td>@Html.PasswordFor(m => m.OldPassword)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.NewPassword)</td>
                    <td>@Html.PasswordFor(m => m.NewPassword)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(m => m.ConfirmPassword)</td>
                    <td>@Html.PasswordFor(m => m.ConfirmPassword)</td>
                </tr>
        
            </table>
            <input type="submit" value="Сохранить" class="orange customButton mediumSizeButton"/>

        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}